.header
  background-color: cmn_grey_dark
  padding: 5px 20px
  border-bottom: solid cmn_yellow_mid 1px
  .navigation
    ul
      padding-left: 0px
      margin-top: 0px
      margin-bottom: 0px
      li
        font-family: 'Yanone Kaffeesatz', sans-serif;
        text-transform: uppercase
        letter-spacing: 2px
        display: inline
        margin-right: 40px

        a
          text-decoration: none
          color: cmn_yellow_mid
          font-weight: bold
          font-size: 30px

          &:hover
            color: cmn_grey_light
            -o-transition: .5s
            -ms-transition: .5s
            -moz-transition: .5s
            -webkit-transition: .5s
            transition: .5s
